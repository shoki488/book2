<% @rooms.each do |room| %>
  <table>
  <tr>
    <th>画像</th>
    <td>
    <%= image_tag room.image.url, class: 'card-img-top',width: '300', height: '200' %>
    </td>
  </tr>
  <tr>
    <th>施設名</th>
    <td><%= room.facility_name %></td>
  </tr>
  <tr>
    <th>施設紹介</th>
    <td><%= room.introduction %></td>
  </tr>
  <tr>
    <th>料金</th>
    <td>¥<%= room.price %>円</td>
  </tr>
  <tr>
    <th>作成日</th>
    <td><%= room.created_at.strftime("%FT%R") %></td>
  </tr>
  <tr>
    <td><%= link_to "編集", [:edit, room] %></td>
  </tr>
  <tr>
    <td>  <%= button_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
  </tr>
</table>
<p>-------------------------------------------------</p>
<% end %>

<div>
  <ul>
    <li><%= link_to "Room情報一覧に戻る", :rooms %></li>
  </ul>
</div>